<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_marginTop="8dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <SeekBar
            android:visibility="gone"
            android:id="@+id/volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="100"
            android:maxHeight="5dp"
            android:thumb="@drawable/ic_device_access_volume_on"
            android:progressDrawable="@drawable/seek_background"
            />

    <LinearLayout
            android:paddingLeft="16dp"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher_blue"/>

            <TextView
                    android:paddingLeft="8dp"
                    android:layout_gravity="center_vertical"
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/now_playing"
                    />

        </LinearLayout>

        <TextView
                android:text="@string/no_media_playback"
                android:textStyle="italic"
                style="@android:style/TextAppearance.Large"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <SeekBar
            android:id="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seek_background"
            />

    <LinearLayout
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_dark"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/replay"
                android:src="@drawable/ic_action_av_replay"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                />

        <!--<LinearLayout-->
                <!--android:layout_width="1dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@android:drawable/divider_horizontal_dark"/>-->
        <!--<ImageButton-->
                <!--style="?android:attr/buttonBarButtonStyle"-->
                <!--android:id="@+id/rewind"-->
                <!--android:src="@drawable/ic_action_av_rewind"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="48dp"-->
                <!--android:layout_weight="1"-->
                <!--/>-->

        <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/divider_horizontal_dark"/>

        <ImageButton
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/playback_toggle"
                android:src="@drawable/ic_action_av_pause"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                />

        <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/divider_horizontal_dark"/>

        <!--<ImageButton-->
                <!--style="?android:attr/buttonBarButtonStyle"-->
                <!--android:id="@+id/fast_forward"-->
                <!--android:src="@drawable/ic_action_av_fast_forward"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="48dp"-->
                <!--android:layout_weight="1"-->
                <!--/>-->

        <!--<LinearLayout-->
                <!--android:orientation="horizontal"-->
                <!--android:id="@+id/fast_forward_divider"-->
                <!--android:layout_width="1dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@android:drawable/divider_horizontal_dark" />-->

        <ImageButton
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/stop"
                android:src="@drawable/ic_action_av_stop"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                />
    </LinearLayout>
</LinearLayout>