<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:cast="http://schemas.android.com/apk/res/com.koushikdutta.cast"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:id="@+id/footer_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    <com.astuetz.PagerSlidingTabStrip
            cast:pstsTabPaddingLeftRight="0dp"
            cast:pstsIndicatorColor="@color/action_bar_red"
            cast:pstsShouldExpand="true"
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="48dip" />

    <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <View
            android:visibility="gone"
            style="@style/Separator"
            android:id="@+id/divider"
            android:background="@android:color/black"
            />

    <LinearLayout
            android:visibility="gone"
            android:layout_margin="8dp"
            android:id="@+id/control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                android:id="@+id/playback_toggle"
                style="?android:attr/buttonBarButtonStyle"
                android:src="@drawable/ic_av_pause_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <SeekBar
                android:layout_gravity="center_vertical"
                android:id="@+id/seek"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/seek_background"
                />

        <TextView
                android:id="@+id/time"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>

        <ImageButton
                android:id="@+id/stop"
                style="?android:attr/buttonBarButtonStyle"
                android:src="@drawable/ic_av_stop_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>